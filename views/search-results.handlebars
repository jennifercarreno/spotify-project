<h1>Showing results for: {{search}}</h1>

    <div class="container mx-auto">
        <ol>
            {{#each tracks}}

           <li>
                <div class="row">

                {{!-- DISPLAYS ALBUM COVER --}}

               <div class="col-sm-1">
                {{#with this.album.images.[2]}}
                <img src={{this.url}}>
                {{/with}}
               </div>

               <div class="col-lg-8">
                {{!-- DISPLAYS TRACK NAME --}}
                   <h3>{{this.name}}</h3>

                {{!-- DISPLAYS ARTIST --}}
                   {{#each this.album.artists}}
                    <p>{{this.name}}</p>
                    {{/each}}
               </div>
               

                <div class="col-lg-3">
                    <form action="/playlist/add" method="POST">
                    <input type="hidden" name="track_id" value="{{ this.id }}">
                    <select name="playlist_id">
                        {{#each this.playlist}}
                        <option value="{{this._id}}">{{this.title}}</option>
                        {{/each}}
                    </select>
                    
                    <input type="submit" value="Add to playlist" class="btn btn-outline-success">
                    </form>
                    
                </div>

               

                </div>

           </li>

            {{/each}}

        </ol>

    </div>



